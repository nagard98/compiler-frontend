{Example used to test the parsing of iteration statements}

program HelloIter;

 var a, b: integer;

begin

    a := 0;
    while  3  do
    begin
        writeln("value of a: ", a);
        a := a + 1
    end;

    b := 0;
    repeat
    begin
        writeln("value of b: ", b);
        b := b + 1
    end
    until 4*2;

end.